      var ctx = document.getElementById("rdb_gauge");
      var myChart = new Chart(ctx, {
        type: "doughnut",
        data: {
          labels: ["Readability"],
          datasets: [
            {
              label: ["# of Votes"],
              data: [#{rdbscore}, #{difrdb}],
              backgroundColor: ["rgb(255, 205, 86)", 'rgba(255, 255, 255, 0.85)'],
              borderColor: ["rgba(255, 205, 86, 0.75)"],
